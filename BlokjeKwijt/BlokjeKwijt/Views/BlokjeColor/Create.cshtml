@model BlokjeKwijt.Domain.BlokjeColor
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BlokjeColor</h4>
<hr />
<div class="row">
        <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RgbValue" class="control-label"></label>
                <input asp-for="RgbValue" required="required" value="#000000" id="HexInput" class="form-control" />
                <span asp-validation-for="RgbValue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" required="required" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Kleurkiezer</label>
                <input type="color" required="required" value="#000000" asp-for="RgbValue" id="ColorPicker" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Voeg toe" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
